{{> header }}

<div class="text-center">
    <h3 class="mt-5">Listado de productos</h3>

        {{# if productos  }}
            <table class="table table-dark mt-5">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <th scope="row">{{ this.id}}</th>
                        <td>{{ this.title }}</td>
                        <td>${{ this.price }}</td>
                        <td><img src="{{ this.thumbnail }}" width="75"/></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        {{ else }}
            <p>No se encontraron datos</p>
        {{/if}}

</div>

{{> footer }}